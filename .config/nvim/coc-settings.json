{ // Python Linting
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintArgs": [
    "--disable=C0114", // Missing module docstring
    "--disable=C0115", // Missing class docstring
    "--disable=C0116", // Missing function docstring
    "--disable=C0330" // Bad continuation style
  ],
  // Python Formatter
  "python.formatting.provider": "black", // Use Black for Python formatting
  "python.formatting.blackArgs": [
    "--line-length",
    "88" // Adjust line length if needed
  ],
  // Flake8 Configuration
  "python.linting.flake8Args": [
    "--max-line-length",
    "88", // Consistent with Black formatter
    "--ignore=E203,E266,E501,W503"
  ],
  // Python Analysis
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.useLibraryCodeForTypes": true,
  // Python Autocomplete and Code Assistance
  "python.venvPath": "~/.virtualenvs", // Set virtual environment path if using venv
  // Diagnostics Popups
  "diagnostic.messageTarget": "echo", // Display diagnostics in the command line, not as popups
  // Python-specific Snippets (Optional for PyTorch)
  "snippets.ultisnips.directories": [
    "~/.config/nvim/UltiSnips"
  ], // java
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "java.maven.downloadSources": true,
  "java.eclipse.downloadSources": true,
  "java.maxConcurrentBuilds": 1,
  "java.import.maven.offline.enabled": true,
  "java.configuration.maven.userSettings": "~/.m2/settings.xml",
  "java.codeGeneration.useBlocks": true,
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.autobuild.enabled": false,
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.comments.enabled": true,
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.jdt.ls.vmargs": "-noverify -Xmx4G -XX:+UseG1GC -XX:+UseStringDeduplication",
  "sumneko-lua.enableNvimLuaDev": true,
  "yaml.completion": true,
  "yaml.validate": true,
  "yaml.schemaStore.enable": true,
  "yaml.schemaStore.url": "https://www.schemastore.org/api/json/catalog.json",
  "yaml.schemas": {
    "kustomization": [
      "**/kustomization.y*ml",
      "**/*.patch.y*ml"
    ],
  },
  "pyright.disableDiagnostics": true,
  "diagnostic-languageserver.filetypes": {
    "cpp": [
      "clangtidy",
      "cppcheck",
      "cpplint",
      "flawfinder"
    ],
    "python": [
      "mypy",
      "flake8",
      "bandit"
    ],
    "c": [
      "clangtidy",
      "cppcheck",
      "flawfinder"
    ],
    "yaml": [
      "yamllint"
    ],
    "vim": "vint",
    "email": "languagetool",
    "markdown": [
      "write-good",
      "markdownlint"
    ],
    "sh": "shellcheck",
    "cmake": [
      "cmake-lint",
      "cmakelint"
    ],
    "systemd": "systemd-analyze"
  },
  "prettier.disableLanguages": [
    "c",
    "cpp",
    "dockerfile",
    "java",
    "json",
    "lua",
    "python",
    "rust",
    "sh",
    "typescript",
    "yaml"
  ],
  "diagnostic-languageserver.formatFiletypes": {
    "python": [
      "black",
      "isort"
    ],
    "sh": "shfmt",
    "json": [
      "fixjson",
      "jq"
    ],
    "rust": [
      "rustfmt"
    ],
    "yaml": [
      "yamlfmt"
    ]
  },
  "diagnostic-languageserver.linters": {
    "flake8": {
      "command": "flake8",
      "args": [
        "--extend-ignore",
        "E501"
      ]
    }
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "comment": "indent with two spaces",
      "command": "shfmt",
      "args": [
        "-i",
        "2"
      ]
    },
    "ktlint": {
      "command": "ktlint",
      "isStdout": false,
      "doesWriteToFile": true,
      "args": [
        "-F",
        "%file"
      ]
    }
  },
  "clangd.arguments": [
    "--background-index",
    "--fallback-style=google"
  ],
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "coc.source.buffer.enable": true,
  "coc.source.buffer.priority": 1,
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSave": true,
  "[yaml]": {
    "coc.preferences.formatOnType": false
  },
  "coc.preferences.formatOnSaveTimeout": 500,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.maxFileSize": "50MB",
  "snippets.ultisnips.pythonPrompt": false,
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "settings": {
        "haskell": {
          "checkParents": "CheckOnSave",
          "checkProject": true,
          "maxCompletions": 40,
          "formattingProvider": "ormolu",
          "plugin": {
            "stan": {
              "globalOn": true
            }
          }
        }
      }
    },
    "texlab": {
      "command": "texlab",
      "filetypes": [
        "tex",
        "bib"
      ],
      "rootPatterns": [
        ".git/"
      ],
      "trace.server": "verbose",
      "settings": {
        "latex": {
          "build": {
            "onSave": true
          },
          "forwardSearch": {
            "executable": "zathura",
            "args": [
              "--synctex-forward",
              "%l:1:%f",
              "%p"
            ]
          },
          "lint": {
            "onChange": true
          }
        }
      }
    }
  }
}
